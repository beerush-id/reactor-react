{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "esnext",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "module": "ES2020",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": false,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "**/*.spec.ts", "jest.config.js"]
}
